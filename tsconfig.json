{
	"compilerOptions": {
		"outDir": "./dist/",
		"rootDir": "./src/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"baseUrl": "./",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": false,
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@services/*": ["src/services/*"],
			"@redux/*": ["src/redux/*"],
			"@interfaces/*": ["src/interfaces/*"]
		},
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	}
}
